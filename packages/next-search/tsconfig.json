{
    "compilerOptions": {
        "target": "es2015",
        "strict": true,
        "lib": ["es2020", "DOM"],
        "module": "es2022",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
      "**/*.ts",
      "**/*.vue",
    ],
}
