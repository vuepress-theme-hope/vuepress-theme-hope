{
  "name": "vuepress-theme-hope-root",
  "version": "2.0.0-beta.47",
  "private": true,
  "description": "A vuepress theme with tons of features",
  "type": "module",
  "workspaces": [
    "demo/*",
    "docs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "cross-env mode=production pnpm run --stream -r build",
    "clean": "pnpm run --stream -r clean",
    "commit": "pnpm git-cz",
    "dev": "concurrently \"tsc -b tsconfig.build.json --watch\" \"pnpm run dev:copy\"",
    "dev:copy": "pnpm run --parallel -r dev:copy",
    "docs:vite-build": "pnpm run --parallel -r docs:vite-build",
    "docs:webpack-build": "pnpm run --parallel -r docs:vite-build",
    "postinstall": "husky install",
    "lint": "pnpm lint:prettier -- --write && pnpm lint:eslint -- --fix && pnpm lint:style -- --fix",
    "lint:check": "pnpm lint:prettier && pnpm lint:eslint && pnpm lint:style",
    "lint:eslint": "eslint . --ext .js,.ts,.vue",
    "lint:md": "pnpm lint:md-lint && pnpm lint:md-remark && pnpm lint:md-textlint",
    "lint:md-lint": "markdownlint **/*.md",
    "lint:md-remark": "remark --quiet .",
    "lint:md-textlint": "textlint ./docs/**/*.md",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint packages/*/src/**/*.scss",
    "packages:bootstrap": "ts-node -O {\\\"module\\\":\\\"commonjs\\\"} scripts/bootstrap.ts",
    "packages:check-update": "ncu --deep --timeout 600000",
    "packages:update": "pnpm up -r",
    "release": "cross-env NODE_OPTIONS=\"--experimental-json-modules\" ts-node-esm  -O {\\\"module\\\":\\\"ESNext\\\"} scripts/release",
    "test": "node --no-compilation-cache --expose-gc node_modules/jest/bin/jest -i"
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/plugin-transform-modules-commonjs": "7.17.9",
    "@babel/preset-env": "7.16.11",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.2.1",
    "@rollup/plugin-typescript": "8.3.2",
    "@textlint-rule/textlint-rule-no-unmatched-pair": "1.0.8",
    "@types/inquirer": "8.2.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.27",
    "@types/semver": "7.3.9",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "@vue/eslint-config-typescript": "10.0.0",
    "babel-jest": "27.5.1",
    "bumpp": "^7.1.1",
    "chalk": "5.0.1",
    "commitizen": "4.2.4",
    "concurrently": "7.1.0",
    "cpx2": "4.2.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-vue": "8.7.1",
    "execa": "6.1.0",
    "husky": "7.0.4",
    "inquirer": "8.2.3",
    "jest": "27.5.1",
    "lint-staged": "12.4.0",
    "markdownlint-cli": "0.31.1",
    "npm-check-updates": "12.5.9",
    "ora": "6.1.0",
    "prettier": "2.6.2",
    "rollup": "2.70.2",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-dts": "4.2.1",
    "rollup-plugin-terser": "7.0.2",
    "semver": "7.3.7",
    "sort-package-json": "1.55.0",
    "standard-version": "^9.3.2",
    "stylelint": "14.7.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "stylelint-config-standard-scss": "3.0.0",
    "stylelint-order": "5.0.0",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "tslib": "2.4.0",
    "typescript": "4.6.3",
    "vuepress-vite": "2.0.0-beta.41",
    "vuepress-webpack": "2.0.0-beta.41"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "pnpm": {
    "overides": {
      "minimist": "^1.2.6"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "eslint-plugin-import",
        "eslint-plugin-n",
        "eslint-plugin-promise",
        "postcss",
        "react",
        "react-dom",
        "webpack"
      ]
    }
  }
}
